{
  "name": "cards",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Cards - Application de cartes flash ultra-performante pour le Web",
  "author": "Alox92",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 3",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage && npm run coverage:badge",
    "test:ci": "vitest run --coverage --bail=1",
    "test:fast": "powershell -Command \"$env:FAST_TESTS='1'; npx vitest run; Remove-Item Env:FAST_TESTS\"",
    "test:fast:coverage": "powershell -Command \"$env:FAST_TESTS='1'; npx vitest run --coverage; Remove-Item Env:FAST_TESTS\"",
    "test:heavy": "vitest run src/__tests__/StudyServiceDeckPage.virtual.heavy.test.tsx",
    "coverage:badge": "node scripts/generateCoverageBadge.cjs",
    "typecheck": "tsc --noEmit",
    "bench": "vitest bench",
    "perf:smoke": "node scripts/perfSmoke.cjs",
    "perf:record": "node scripts/benchRecord.cjs && node scripts/perfSmoke.cjs",
    "perf:lighthouse": "node scripts/lighthouse.cjs",
    "perf:check": "npm run perf:record && node scripts/perfCheck.cjs",
    "perf:report": "npm run build && node scripts/perfReport.cjs",
    "perf:learn:check": "node scripts/learnCheck.cjs",
    "pwa:icons": "node scripts/generatePwaIcons.cjs",
    "bundle:analyze": "npm run build && start dist/stats.html",
    "lighthouse:ci": "lhci autorun"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "chart.js": "^4.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "dexie": "^3.2.4",
    "docx": "^8.5.0",
    "dompurify": "^3.1.6",
    "framer-motion": "^10.16.4",
    "jszip": "^3.10.1",
    "katex": "^0.16.24",
    "lucide-react": "^0.544.0",
    "mammoth": "^1.6.0",
    "pdfjs-dist": "^5.4.54",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-katex": "^3.1.0",
    "react-router-dom": "^6.15.0",
    "sql.js": "^1.13.0",
    "tailwind-merge": "^3.3.1",
    "tesseract.js": "^6.0.1",
    "web-vitals": "^4.2.0",
    "xlsx": "^0.18.5",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.48.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^15.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "fake-indexeddb": "^6.2.2",
    "jsdom": "^26.1.0",
    "pngjs": "^7.0.0",
    "postcss": "^8.4.29",
    "rollup-plugin-visualizer": "^6.0.4",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^7.0.6",
    "vite-plugin-pwa": "^1.0.2",
    "vitest": "^3.2.4",
    "workbox-window": "^7.0.0"
  },
  "keywords": [
    "flashcards",
    "spaced-repetition",
    "learning",
    "education",
    "react",
    "typescript",
    "pwa"
  ]
}
